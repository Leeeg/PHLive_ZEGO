<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/login_true"
              android:layout_width="match_parent"
              android:layout_height="240dp"
              android:background="@color/white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_persion_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/iv_game"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_layout_personal_game"/>

            <TextView
                android:id="@+id/tv_not_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:text="你尚未开通主播"
                android:textColor="@color/grey_word"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/iv_not_anchor"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/tv_not_anchor"
                android:layout_toLeftOf="@+id/tv_not_anchor"
                android:src="@drawable/icon_layout_personal_camera"/>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_persion_stagename"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="8"
            android:textColor="@color/black_word"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/iv_rank"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/normal_level_00"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/person_tv_star"
                    style="@style/Text_Shade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/person_tv_score"
                    style="@style/Text_Shade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_word"
                    android:text="0"
                    android:textSize="10sp"
                    android:paddingRight="1dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/mine_iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_mine_personal_rqcode"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="ID："
            android:textColor="@color/grey_word"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey_word"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="积分："
            android:textColor="@color/grey_word"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey_word"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_richScore"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/iv_guard"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/iv_fans_club"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/iv_anchor"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/followCount"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="0"
            android:textColor="@color/green_words"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fansCount"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="0"
            android:textColor="@color/green_words"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="0"
            android:textColor="@color/green_words"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/black_word"/>

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="粉丝"
            android:textColor="@color/black_word"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="动态"
            android:textColor="@color/black_word"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>