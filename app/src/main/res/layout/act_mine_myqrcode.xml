<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_bg"
              android:orientation="vertical">

    <include layout="@layout/layout_table_top"/>

    <LinearLayout
        android:id="@+id/my_qrcode_ll_share"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@drawable/bg_mine_myqrcode"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/mine_qrcode_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/mine_qrcode_icon"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/black_word"
                android:textSize="15sp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/mine_qrcode_icon"
                android:layout_below="@+id/tv_nickname"
                android:layout_marginTop="3dp"
                android:text="@string/location_default"
                android:textColor="@color/white_word"
                android:textSize="15sp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>