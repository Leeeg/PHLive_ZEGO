<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:gravity="center"
                android:paddingRight="30dp"
                android:id="@+id/root"
                android:paddingLeft="30dp"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/shape_dfrg_person_bg"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:textSize="12sp"
            android:text="更新中..."/>

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:text="50%"/>

        <com.i5i58.live.common.view.progressBar.SaundProgressBar
            xmlns:saund="http://schemas.android.com/apk/res-auto"
            android:id="@+id/regularprogressbar"
            style="@style/Widget.ProgressBar.RegularProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            saund:offset="5dip"/>
    </RelativeLayout>

</RelativeLayout>
