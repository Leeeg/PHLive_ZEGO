<resources>

    <!-- Base application theme. -->
    <style name="mAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 小中浅黑色字体 -->
    <style name="FontStyleNormalLightBlackSmallMiddle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/home_text_light_black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- 中浅黑色字体 -->
    <style name="FontStyleNormalLightBlackMiddle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/home_text_light_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 黑色中字体 -->
    <style name="FontStyleNormalBlackMiddle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 黑色稍大字体 -->
    <style name="FontStyleNormalBlackBig" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 黑色大字体 -->
    <style name="FontStyleNormalBlackBiger" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 小浅灰字体 -->
    <style name="FontStyleNormalGraySmall" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_light_grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 中浅灰字体 -->
    <style name="FontStyleNormalGrayMiddle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_light_grey</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 稍大浅灰字体 -->
    <style name="FontStyleNormalGrayBig" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_light_grey</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 绿色小字体 -->
    <style name="FontStyleNormalGreenSmall" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 红色小字体 -->
    <style name="FontStyleNormalRedSmall" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_red</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 红色大字体 -->
    <style name="FontStyleNormalRedBiger" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textcolor_red</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 橘黄色稍大字体 -->
    <style name="FontStyleNormalYellowBiger" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/not_surance_yellow</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 蓝色大字体 -->
    <style name="FontStyleNormalBlueBiger" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/surance_blue</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 蓝色稍大字体 -->
    <style name="FontStyleNormalBlueBig" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/surance_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 蓝色中等字体 -->
    <style name="FontStyleNormalBlueMiddle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/surance_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 自定义Dialog中button的样式 -->
    <style name="dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 自定义Dialog在显示时的样式 -->
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <!-- 选择器Dialog在初始化时的样式 -->
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- hintStyle -->
    <style name="HintStyle">
        <item name="android:textColor">@color/green_tab</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- tabLayout -->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/tablayout_textsize</item>
        <item name="android:textColor">@color/grey_word</item>
    </style>
    <!-- tabLayout_bgm -->
    <style name="BGMTabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/tablayout_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_word</item>
    </style>

    <!-- 阴影TextStyle -->
    <style name="Text_Shade">
        <item name="android:paddingLeft">0px</item>
        <item name="android:paddingBottom">0px</item>
        <item name="android:shadowColor">#90000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- spaceImage -->
    <style name="Theme.Basic" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.Transparent" parent="@style/Theme.Basic">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- switchButton -->
    <style name="def_switch_view">
        <item name="switch_bg_color">#999999</item>
        <item name="switch_ball_color">#ffffff</item>
    </style>

    <!-- 底部弹窗 -->
    <style name="PopBottom" parent="@android:style/Animation">
        <!--当窗口出现的时候  -->
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>
        <!--当窗口消失的时候  -->
        <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>
    </style>

    <!-- 右侧弹窗 -->
    <style name="PopRight" parent="@android:style/Animation">
        <!--当窗口出现的时候  -->
        <item name="android:windowEnterAnimation">@anim/pop_right_in</item>
        <!--当窗口消失的时候  -->
        <item name="android:windowExitAnimation">@anim/pop_right_out</item>
    </style>

    <!-- 直播 -->
    <style name="MediaController_Text">
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- LoadingPOP -->
    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <!-- DialogFragmentStyle -->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>
    </style>

    <!-- PopupWindow左右弹出的效果 -->
    <style name="txt_camera_pop_menu">
        <item name="android:textColor">@color/blue_word</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 输入框 -->
    <style name="edit_text_style">
        <item name="android:textCursorDrawable">@color/green_tab</item>
    </style>

    <!-- recycleview间隔 -->
    <style name="recycle_item">
        <item name="android:listDivider">@drawable/shape_trans</item>
    </style>

    <style name="WarpLinearLayoutDefault">
        <item name="grivate">left</item>
        <item name="horizontal_Space">20dp</item>
        <item name="vertical_Space">20dp</item>
        <item name="isFull">false</item>
    </style>

    <style name="MyDialogStyleBottom4" parent="android:Theme.Dialog">

        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="Widget.ProgressBar.RegularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>


</resources>
